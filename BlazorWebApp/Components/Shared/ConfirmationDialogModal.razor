<MudDialog>
    <DialogContent>@Content</DialogContent>
    <DialogActions>
        <MudButton OnClick="@(() => MudDialog.Cancel())" Variant="Variant.Text" Color="CancelButtonColor">@CancelButtonText</MudButton>
        <MudButton OnClick="@(() => MudDialog.Close(DialogResult.Ok(true)))" Variant="Variant.Filled" Color="OkButtonColor">@OkButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public string CancelButtonText { get; set; } = "Cancel";
    [Parameter]
    public Color CancelButtonColor { get; set; } = Color.Default;
    [Parameter]
    public string OkButtonText { get; set; } = "Ok";
    [Parameter]
    public Color OkButtonColor { get; set; } = Color.Success;
    [Parameter]
    public MarkupString Content { get; set; }
}
