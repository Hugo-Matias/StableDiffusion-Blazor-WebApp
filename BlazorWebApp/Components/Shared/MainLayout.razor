@inherits LayoutComponentBase
@inject AppState AppState

<PageTitle>BlazorDiffusion</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="() => DrawerToggler()" />
        Blazor<strong>Diffusion</strong>
    </MudAppBar>
    <MudDrawer Open="_isDrawerOpen">
        <NavBar />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDrawerOpen = true;

    private void DrawerToggler() => _isDrawerOpen = !_isDrawerOpen;
}
