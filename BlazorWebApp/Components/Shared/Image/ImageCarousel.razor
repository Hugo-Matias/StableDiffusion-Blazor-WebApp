<div id="@GalleryId" class="carousel slide carousel-fade" style="@Style" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Images.Count; i++)
        {
            <div class="carousel-item @(Images[i] == Images[0] ? "active" : "")" data-bs-interval="10000">
                <MudImage Src="@("data:image/png;base64," + Images[i])" Style="max-height: 80vh;" ObjectFit="ObjectFit.Contain" Elevation="5" Fluid />
                @if (Images.Count > 1)
                {
                    <div class="image-number">@(IncrementCounter ? i + 1 : i)</div>
                }
            </div>
        }
    </div>
    @if (ShowControls && Images.Count > 1)
    {
        <button class="carousel-control-prev" type="button" data-bs-target="#@GalleryId" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#@GalleryId" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    }
</div>

@code {
    [Parameter]
    public List<string> Images { get; set; }
    [Parameter]
    public string GalleryId { get; set; } = string.Empty;
    [Parameter]
    public bool ShowControls { get; set; } = true;
    [Parameter]
    public bool IncrementCounter { get; set; } = false;
    [Parameter]
    public string Style { get; set; }
}
