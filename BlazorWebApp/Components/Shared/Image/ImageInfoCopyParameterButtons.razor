<div>
    <MudTooltip Text="Copy to Txt2Img/Img2Img" Delay=700 Duration=1000 Placement="@(Vertical ? Placement.Left : Placement.Bottom)" Arrow>
        <MudButtonGroup Color="Color.Default" Variant="Variant.Text" VerticalAlign=Vertical Style="position:relative; right: 1rem;">
            <MudIconButton OnClick="() => OnTxt2ImgClicked.InvokeAsync(Property)" Icon="fa-regular fa-file-lines icon" />
            <MudIconButton OnClick="() => OnImg2ImgClicked.InvokeAsync(Property)" Icon="fa-regular fa-file-image icon" />
        </MudButtonGroup>
    </MudTooltip>
</div>

@code {
    [Parameter]
    public EventCallback<string> OnTxt2ImgClicked { get; set; }
    [Parameter]
    public EventCallback<string> OnImg2ImgClicked { get; set; }
    [Parameter]
    public string Property { get; set; }
    [Parameter]
    public bool Vertical { get; set; }
}
