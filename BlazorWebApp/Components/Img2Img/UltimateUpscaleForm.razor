@inject AppState AppState

<MudText Typo="Typo.button" Style="opacity:0.2;">Ultimate Upscale</MudText>
<MudGrid>
    <MudItem xs="6">
        <MudSelect @bind-Value=Parameters.TargetSizeType Label="Target Type" AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
            @{
                var index = 0;
                foreach (var type in AppState.Settings.Scripts.UltimateUpscale.TargetSizeTypes)
                {
                    <MudSelectItem Value="index">@type</MudSelectItem>
                    index++;
                }
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="6">
        <MudSelect Label="Upscaler" @bind-Value=Parameters.UpscalerIndex AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
            @{
                if (AppState.Upscalers != null)
                {
                    var index = 0;
                    foreach (var upscaler in AppState.Upscalers)
                    {
                        <MudSelectItem Value="index">@upscaler.Name</MudSelectItem>
                        index++;
                    }
                }
            }
        </MudSelect>
    </MudItem>
    @if (Parameters.TargetSizeType != 0)
    {
        <MudItem xs="12">
            @if (Parameters.TargetSizeType == 1)
            {
                <MudStack Row=true>
                    <MudSlider @bind-Value=Parameters.CustomWidth Min=AppState.Settings.Scripts.UltimateUpscale.TargetResolution.Min Max=AppState.Settings.Scripts.UltimateUpscale.TargetResolution.Max Step=AppState.Settings.Scripts.UltimateUpscale.TargetResolution.Step><small>Width:</small> @Parameters.CustomWidth px</MudSlider>
                    <MudSlider @bind-Value=Parameters.CustomHeight Min=AppState.Settings.Scripts.UltimateUpscale.TargetResolution.Min Max=AppState.Settings.Scripts.UltimateUpscale.TargetResolution.Max Step=AppState.Settings.Scripts.UltimateUpscale.TargetResolution.Step><small>Height:</small> @Parameters.CustomHeight px</MudSlider>
                </MudStack>
            }
            else if (Parameters.TargetSizeType == 2)
            {
                <MudSlider @bind-Value=Parameters.CustomScale Min=AppState.Settings.Scripts.UltimateUpscale.TargetScale.Min Max=AppState.Settings.Scripts.UltimateUpscale.TargetScale.Max Step=AppState.Settings.Scripts.UltimateUpscale.TargetScale.Step><small>Scale:</small> @Parameters.CustomScale</MudSlider>
            }
        </MudItem>
    }
